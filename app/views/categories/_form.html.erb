<div class="container form-container">
  <div class="row justify-content-center">
    <div class="col-10 form">
      <%= render 'shared/errors', obj: @category  %>
      <%= form_with(model: @category, class: "shadow p-3 mb-5 rounded", local:true) do |f| %>
        <div class="form-group row">
            <%= f.label :name, "Category Name", class: 'col-2 col-form-label mb-4' %>
            <div class="col-10">
                <%= f.text_field :name, class: 'form-control', placeholder: "Enter a Name" %>
            </div>
        </div>


        <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-md mt-3 col-3" %>
        </div>

      <% end %>
  </div>
</div>