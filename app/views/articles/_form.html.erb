<div class="container form-container">
    <div class="row justify-content-center">
        <div class="col-10 form">
            <%= render 'shared/errors' %>
            <%= form_with(model: @article, class: "shadow p-3 mb-5 rounded", local:true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: 'col-2 col-form-label mb-4' %>
                    <div class="col-10">
                        <%= f.text_field :title, class: 'form-control' %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :description, class: 'col-2 col-form-label' %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: 'form-control' %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-md mt-3 col-3"%>
                </div>

            <% end %>
        </div>
    </div>

    <%= link_to 'Cancel and return to articles listing', articles_path%>
</div>